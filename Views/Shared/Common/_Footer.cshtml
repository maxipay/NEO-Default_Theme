@{
    List<DomainSocialNetwork.Entities.SocialNetwork> redesSociais = Session["SocialNetworkLinks"] != null ? (List<DomainSocialNetwork.Entities.SocialNetwork>)Session["SocialNetworkLinks"] : new List<DomainSocialNetwork.Entities.SocialNetwork>();
}

<div class="bg-footer">
<div class="ui container fluid inverted vertical segment">
    <div class="ui container">

        <div class="ui four column stackable inverted equal height grid">
          <div class="six wide computer column left aligned">
            <i class="mail icon newsletter"></i>
            <span>Cadastre seu e-mail e receba novidades e promoções.</span>
          </div>
          <div class="six wide computer column left aligned">
            <div class="ui form">
                <div class="inline field">
                    <div class="ui left icon action input">
                        <i class="mail icon"></i>
                        <input type="text" placeholder="seu@email.com.br" id="email_news">
                        <button class="ui button inverted basic white" id="btn_news">
                            <i class="send outline icon"></i>Cadastrar
                        </button>
                    </div>
                </div>
            </div>
          </div>
        </div>
        <div class="ui four column stackable inverted equal height grid">
            <div class="six wide mobile three wide computer column left aligned">
                <a href="@(Session["idEventList"] == null ? "/Home" : "#")">
                    <img class="ui middle aligned image" src="/assets/image/logo/logo-green.png" alt="">
                </a>
            </div>
            <div class="ten wide table six wide computer column">
                <div class="ui grid stackable">
                    <div class="row two column no padding">
                        @Html.Action("CustomPages", "Home")
                    </div>
                </div>
            </div>

            <div class="six wide tablet four wide computer column">

                @Html.Action("GetList", "EventList")
                <h4 class="ui inverted header text uppercase">Central de Relacionamento</h4>
                <p>Preparada para esclarecer suas dúvidas e problemas.</p>
                <h5>SAC: @LojaCorp.Control.Company._Company.Phone1</h5>
            </div>


            <div class="three wide computer column left aligned">
                <h4 class="ui inverted header text uppercase">Siga nos</h4>
                <div class="ui horizontal relaxed list social">

                    @if (redesSociais.Find(f => f.Identifier == "facebook") != null)
                    {
                        <a class="ui facebook icon button" href="@redesSociais.Find(f => f.Identifier == "facebook").Content" target="_blank">
                            <i class="facebook icon"></i>
                        </a>
                    }
                    @if (redesSociais.Find(f => f.Identifier == "instagram") != null)
                    {
                        <a class="ui instagram icon button" href="@redesSociais.Find(f => f.Identifier == "instagram").Content" target="_blank">
                            <i class="instagram icon"></i>
                        </a>
                    }
                    @if (redesSociais.Find(f => f.Identifier == "twitter") != null)
                    {
                        <a class="ui twitter icon button" href="@redesSociais.Find(f => f.Identifier == "twitter").Content" target="_blank">
                            <i class="twitter icon"></i>
                        </a>
                    }
                    @if (redesSociais.Find(f => f.Identifier == "youtube") != null)
                    {
                        <a class="ui youtube icon button" href="@redesSociais.Find(f => f.Identifier == "youtube").Content" target="_blank">
                            <i class="youtube icon"></i>
                        </a>
                    }
                    @if (redesSociais.Find(f => f.Identifier == "google plus") != null)
                    {
                        <a class="ui google plus icon button" href="@redesSociais.Find(f => f.Identifier == "google plus").Content" target="_blank">
                            <i class="google plus icon"></i>
                        </a>
                    }



                </div>
            </div>
        </div>

    </div>
</div>
<div class="ui container fluid inverted vertical segment">
    <div class="ui container">
        <div class="ui three column grid">
            <div class="row">
                <div class="twelve wide mobile four wide tablet six wide computer column text small">
                    <p>@LojaCorp.Control.Company._Company.FantasyName</p>
                    <address>
                        @{
                            string complementAddress = LojaCorp.Control.Company._Company.Complement != "" ? " " + LojaCorp.Control.Company._Company.Complement + ", " : "";
                        }
                        @string.Format("{0}, {1}{2}", LojaCorp.Control.Company._Company.Address, complementAddress, LojaCorp.Control.Company._Company.Neighbourhood)
                        <br>
                        @string.Format("{0}-{1}-{2}", LojaCorp.Control.Company._Company.CEP, LojaCorp.Control.Company._Company.City, LojaCorp.Control.Company._Company.State)
                        <br />
                        CNPJ: @LojaCorp.Control.Company._Company.CNPJ
                    </address>
                </div>
                <div class="twelve wide mobile four wide tablet four wide computer left aligned column">
                    <h4 class="text uppercase">Pagamentos</h4>
                    @Html.Partial("~/Views/Shared/Common/_Payments_List.cshtml")
                    @* Page: ~/Views/Company/_EBit.cshtml *@
                    <div class="ui horizontal list selos">
                        <div class="item">
                            @Html.Action("EBit", "Company")
                        </div>
                        <div class="item">
                            <div class="ui tiny images">
                                @Html.Action("GetCompanySeal", "Company")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="twelve wide mobile four wide tablet six wide computer right aligned column">
                  <div class="ui container">
                    <span>
                      @Html.Partial("Common/_JetLogo")
                    </span>
                    <span>
                      <img src="/assets/image/logo/logo-peras.png" />
                    </span>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
