@{
    ViewBag.Title = "Neo - Omnichannel Commerce Platform";
    Layout = "~/Views/Shared/Base/_Layout.cshtml";
}


<!-- ~/Views/Shared/Blocks/Banner/_FullBanner.cshtml -->
@Html.Action("FullBanner", "Banner")

<!-- ~/Views/Shared/Blocks/_InfoBar.cshtml -->
@Html.Partial("Blocks/_InfoBar")

<div class="ui container">
  <div class="ui grid">
    <div class="ui four wide column computer only hideme" id="left-menu">

    </div>
    <div class="ui sixteen wide column twelve wide computer">
      <div class="featuredProducts">
        <!-- ~/Views/Shared/Blocks/Product/_FeaturedProducts.cshtml -->
        @Html.Action("FeaturedProducts", "Product")
      </div>

      <!-- ~/Views/Shared/Blocks/_CentralHalfBanner.cshtml -->
      @Html.Action("CentralHalfBanner", "Banner")

      <!-- ~/Views/Shared/Blocks/Group/_Groups.cshtml -->
      @Html.Action("Group", "Group")

      <!-- ~/Views/Shared/Blocks/_TopSellers.cshtml -->
      @Html.Action("TopSellers", "Product")
    </div>
  </div>
</div>

<!-- ~/Views/Shared/Blocks/Banner/_FooterHalfBanner.cshtml -->
@Html.Action("FooterHalfBanner", "Banner")

<!-- ~/Views/Shared/Blocks/Brand/_Brands.cshtml -->
@Html.Action("Brand", "Product")

@section gtm {
    @Html.Action("GoogleTagManager", "Common", new { origin = ViewContext.RouteData.Values["controller"] })
}
